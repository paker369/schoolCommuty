<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="user_profile_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">1px</item>
        <item name="android:layout_marginStart">18dp</item>
        <item name="android:layout_marginEnd">18dp</item>
        <item name="android:background">#fff</item>
        <!--<item name="android:backgroundTint" tools:targetApi="lollipop">?android:selectableItemBackgroundBorderless</item>-->
    </style>

    <style name="user_profile_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_gravity">start|center_vertical</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#222</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="user_profile_value">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#777</item>
    </style>

    <style name="dialog_show_navg" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>
</resources>